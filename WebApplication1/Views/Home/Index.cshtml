@{
    ViewData["Title"] = "Home";
}

<div class="d-flex justify-content-center align-items-center flex-wrap py-5">
    <div class="row g-3 w-100 justify-content-center">
        <div class="col-sm-6 col-md-3">
            <a class="card text-center h-100 text-decoration-none text-dark" asp-controller="Donations" asp-action="Index">
                <div class="card-body">
                    <h3>💰 Donations</h3>
                    <p>View and add donations</p>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-md-3">
            <a class="card text-center h-100 text-decoration-none text-dark" asp-controller="DisasterReports" asp-action="Index">
                <div class="card-body">
                    <h3>⚠️ Disaster</h3>
                    <p>Report a Disaster</p>
                </div>
            </a>
        </div>
        <div class="col-sm-6 col-md-3">
            <a class="card text-center h-100 text-decoration-none text-dark" asp-controller="VolunteerTasks" asp-action="Index">
                <div class="card-body">
                    <h3>🙋 Volunteers</h3>
                    <p>Register and assign volunteers</p>
                </div>
            </a>
        </div>
    </div>
</div>